{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "node_modules/draft-js-plugins-editor/lib/index.d.ts",
    "src",
    "declarations"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "esnext",
